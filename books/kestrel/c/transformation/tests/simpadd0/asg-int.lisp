(in-package "C2C")

(include-book "../../simpadd0")

(include-book "../../../syntax/input-files")
(include-book "../../../syntax/output-files")

(include-book "../utilities")

; (depends-on "old/asg_int.c")

;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;

(c$::input-files :files '("asg_int.c")
                 :base-dir "old"
                 :const *old-code*)

(simpadd0 :const-old *old-code*
          :const-new *new-code*)

(c$::output-files :const *new-code*
                  :base-dir "new")

(assert-file-contents
 :file "new/asg_int.c"
 :content "// This file is generated by 'simpadd0'.

void asg_int(int x, int y) {
  x = 5;
  x = y;
}
")

(assert-highest-thm-has-exec-fun *new-code*)
