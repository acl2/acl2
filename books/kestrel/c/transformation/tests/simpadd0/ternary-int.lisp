(include-book "../../../syntax/output-files")

(include-book "../utilities")

; (depends-on "old/ternary_int.c")

;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;

(c$::input-files :files '("ternary_int.c")
                 :base-dir "old"
                 :const *old-code*)

(simpadd0 :const-old *old-code*
          :const-new *new-code*)

(c$::output-files :const *new-code*
                  :base-dir "new")

(assert-file-contents
 :file "new/ternary_int.c"
 :content "// This file is generated by 'simpadd0'.

int ternary_pure(int x, int y, int z) {
  return x ? y : z;
}

int ternary_nonpure(int x, int y, int z, int w) {
  return (x = w) ? (x = ~w) : (x = !w);
}
")

(assert-highest-thm-has-exec-fun *new-code*)
