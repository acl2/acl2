             (fty::deffixequiv ,info.get-tree-fn
               :hints (("Goal"
                        :in-theory '(,info.get-tree-fn
                                     ,(packn-pos (list info.get-tree-list-fn
                                                       '-of-tree-fix-cst)
                                                 info.get-tree-list-fn))))))))))
    (mv matching-thm-event?
        get-tree-list-fn-event?
        get-tree-fn-event?)))

