                    :hints
                    (("Goal"
                      :in-theory '(,info.get-tree-fn
                                   tree-fix-when-treep
                                   treep-of-nth-when-tree-listp
                                   (:e nfix)
                                   ,(packn-pos (list 'tree-listp-of-
                                                     info.get-tree-list-fn)
                                               info.get-tree-list-fn))
                      :use (,get-tree-list-fn-match-thm
                            (:instance ,info.matching-thm
