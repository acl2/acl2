	     (= y z)))
  :rule-classes ()
  :hints (("Goal" :use (rna-minus (:instance rnaf-11 (x (- x)) (y (- y)))))))

(defthm rna-force
    (implies (and (integerp n)
		  (> n 0)
                  (rationalp x)
                  (not (= x 0))
		  (rationalp y)
                  (exactp y n)
		  (< (abs (- x y)) (expt 2 (- (expo x) n))))
	     (= y (rna x n)))
  :hints (("Goal" :use (rnaf-11 rnaf-12)))
  :rule-classes ())
  

