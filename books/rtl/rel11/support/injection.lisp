(local-defthm p2-1
  (implies (and (rationalp x) (> x 0)
                (>= (+ x (expt 2 (1- (expo x))))
	            (expt 2 (1+ (expo x))))
	        (not (= (rne x 1) (expt 2 (1+ (expo x))))))
           (equal x (- (expt 2 (1+ (expo x))) (expt 2 (1- (expo x))))))
  :hints (("Goal" :use (expo-upper-bound
                        (:instance rne-force (n 1) (y (expt 2 (1+ (expo x)))))
                        (:instance exactp-2**n (m 1) (n (1+ (expo x)))))))
  :rule-classes ())

