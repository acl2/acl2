                  (> x 0)
	  	  (posp n)
		  (rationalp y)
		  (exactp y n)
		  (< (abs (- x y)) (expt 2 (- e n))))
	     (>= (expo y) e)))
  :hints (("Goal" :in-theory (enable exactp-2**n)
                  :use (rnaf-3 expo-lower-bound
		        (:instance expo>= (x y) (n (expo x)))
			(:instance fp-2 (x (expt 2 (expo x))))))))

