(defthm exactp-odd
    (implies (and (rationalp x)
		  (integerp n)
		  (> x 0)
		  (> n 1))
	     (exactp (odd x n) n))
	     :rule-classes ()
  :hints (("Goal" :in-theory (disable expt-pos abs-trunc)
		  :use ((:instance exactp-odd-6)
			(:instance exactp2 (x (odd x n)))
			(:instance exactp2 (x (trunc x (1- n))) (n (1- n)))))))

