                  (iff (equal (bitn (tau a b c n) k)
                              (bitn (sigm a b c n) k))
                       (equal (bitn (kap a b c n) k)
                              1)))
         :rule-classes ()
         :hints (("Goal" ; :in-theory (disable)
		  :use (top-1
			top-2
			(:instance bitn-0-1 (x (sigm a b c n)) (n k))
