(local (defthm top-2
         (implies (and (integerp n)
                       (>= n 0)

                       (integerp k)
                       (>= k 0)
                       (<= k n)
                       )
                  (iff (equal (bitn (lxor (sigm a b c n) (kap a b c n) (+ 1 n)) k)
